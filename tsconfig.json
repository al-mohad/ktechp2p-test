{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
